{
  "name": "reversi-react",
  "version": "0.1.0",
  "description": "A Reversi game implemented in React / TypeScript",
  "main": "index.js",
  "repository": "git@github.com:shuntksh/reversi-react.git",
  "author": "Shun <shuntksh@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --config webpack.config.js --display-error-details",
    "check": "npm run npm-check && npm run nsp",
    "clean": "rimraf ./dist",
    "prebuild:css": "tcm --pattern ./src/**/*.css --camelCase",
    "npm-check": "npm-check --skip-unused",
    "nsp": "nsp check",
    "start": "cross-env NODE_ENV=development concurrently --kill-others --raw \"npm run prebuild:css -- --watch\" \"npm run start:dev-server\"",
    "start:dev-server": "webpack-dev-server --hot --inline --config webpack.config.js"
},
  "devDependencies": {
    "@types/chai": "3.4.35",
    "@types/classnames": "0.0.32",
    "@types/mocha": "2.2.39",
    "@types/react": "15.0.14",
    "@types/react-addons-test-utils": "0.14.17",
    "@types/react-dom": "0.14.23",
    "@types/react-redux": "4.4.37",
    "awesome-typescript-loader": "3.1.2",
    "chai": "3.5.0",
    "concurrently": "3.4.0",
    "cross-env": "3.2.3",
    "css-loader": "0.26.2",
    "cssnano": "3.10.0",
    "extract-text-webpack-plugin": "2.1.0",
    "file-loader": "0.10.1",
    "html-webpack-plugin": "2.28.0",
    "json-loader": "0.5.4",
    "mkdirp": "0.5.1",
    "mocha": "3.2.0",
    "ncp": "2.0.0",
    "npm-check": "5.4.0",
    "nsp": "2.6.3",
    "postcss-cssnext": "2.9.0",
    "postcss-loader": "1.3.3",
    "postcss-reporter": "3.0.0",
    "react": "15.4.2",
    "react-addons-test-utils": "15.4.2",
    "react-dev-utils": "0.5.2",
    "react-dom": "15.4.2",
    "react-hot-loader": "1.3.1",
    "react-redux": "5.0.3",
    "redux": "3.6.0",
    "rimraf": "2.6.1",
    "style-loader": "0.13.2",
    "stylefmt": "5.1.2",
    "stylelint": "7.9.0",
    "stylelint-config-standard": "16.0.0",
    "ts-node": "2.1.0",
    "tslint": "4.5.1",
    "tslint-loader": "3.4.3",
    "tslint-react": "2.4.0",
    "typed-css-modules": "0.2.0",
    "typescript": "2.2.1",
    "url-loader": "0.5.8",
    "webpack": "2.2.1",
    "webpack-dev-server": "2.4.1"
  }
}
