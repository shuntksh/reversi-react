{
  "name": "reversi-react",
  "version": "0.1.0",
  "description": "A Reversi game implemented in React / TypeScript",
  "repository": {
    "type": "git",
    "url": "git@github.com-pub:shuntksh/reversi-react.git"
  },
  "author": "Shun <shuntksh@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "npm run clean && npm run build:app",
    "build:app": "cross-env NODE_ENV=production webpack",
    "check": "npm run npm-check && npm run nsp",
    "clean": "rimraf ./build",
    "prebuild:css": "tcm --pattern ./src/**/*.css --camelCase",
    "npm-check": "npm-check --skip-unused",
    "nsp": "nsp check",
    "start": "concurrently --kill-others \"npm run prebuild:css -- --watch\" \"npm run start:dev-server\"",
    "start:dev-server": "cross-env NODE_ENV=development webpack-dev-server --hot --inline"
  },
  "devDependencies": {
    "@types/chai": "3.4.35",
    "@types/classnames": "0.0.32",
    "@types/mocha": "2.2.40",
    "@types/react": "15.0.21",
    "@types/react-addons-test-utils": "0.14.17",
    "@types/react-dom": "0.14.23",
    "awesome-typescript-loader": "3.1.2",
    "chai": "3.5.0",
    "classnames": "2.2.5",
    "concurrently": "3.4.0",
    "cross-env": "4.0.0",
    "css-loader": "0.28.0",
    "cssnano": "3.10.0",
    "extract-text-webpack-plugin": "2.1.0",
    "file-loader": "0.11.1",
    "html-webpack-plugin": "2.28.0",
    "mkdirp": "0.5.1",
    "mocha": "3.2.0",
    "ncp": "2.0.0",
    "npm-check": "5.4.0",
    "nsp": "2.6.3",
    "postcss-cssnext": "2.10.0",
    "postcss-loader": "1.3.3",
    "postcss-reporter": "3.0.0",
    "react": "15.5.0",
    "react-addons-test-utils": "15.4.2",
    "react-dev-utils": "0.5.2",
    "react-dom": "15.4.2",
    "react-hot-loader": "1.3.1",
    "rimraf": "2.6.1",
    "style-loader": "0.16.1",
    "stylelint": "7.10.0",
    "stylelint-config-standard": "16.0.0",
    "ts-node": "3.0.2",
    "tslint": "4.5.1",
    "tslint-loader": "3.4.3",
    "tslint-react": "2.5.0",
    "typed-css-modules": "0.2.0",
    "typescript": "2.2.2",
    "url-loader": "0.5.8",
    "webpack": "2.3.2",
    "webpack-dev-server": "2.4.2"
  }
}
